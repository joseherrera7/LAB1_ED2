<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCargarDatos"
        android:layout_width="136dp"
        android:layout_height="49dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="19dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:text="comprimir .txt"
        app:layout_constraintBottom_toTopOf="@+id/rutadescomp"
        app:layout_constraintEnd_toStartOf="@+id/buttonBuscarArchivo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre" />

    <EditText
        android:id="@+id/ruta"
        android:layout_width="352dp"
        android:layout_height="46dp"

        android:layout_marginBottom="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="ruta a partir de root para guardar archivo comprimido"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="352dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="nombre del archivo para guardar archivo comprimido"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/btnCargarDatos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ruta" />

    <Button
        android:id="@+id/descomprimir"
        android:layout_width="189dp"
        android:layout_height="49dp"
        android:layout_marginBottom="42dp"
        android:layout_marginEnd="147dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="147dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="descomprimir .huff "
        app:layout_constraintBottom_toTopOf="@+id/btnMisCompresiones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.309"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombredesco" />

    <EditText
        android:id="@+id/rutadescomp"
        android:layout_width="372dp"
        android:layout_height="45dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="ruta a partir de root para guardar archivo descomprimido"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/nombredesco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCargarDatos" />

    <EditText
        android:id="@+id/nombredesco"
        android:layout_width="368dp"
        android:layout_height="44dp"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:hint="nombre del archivo para descomprimido"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/descomprimir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rutadescomp" />

    <Button
        android:id="@+id/btnMisCompresiones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="213dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="213dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="42dp"
        android:text="Mis Compresiones"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descomprimir" />

    <Button
        android:id="@+id/buttonBuscarArchivo"
        android:layout_width="161dp"
        android:layout_height="63dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:text="Buscar archivo .huff o .txt"
        app:layout_constraintBottom_toTopOf="@+id/rutadescomp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCargarDatos"
        app:layout_constraintTop_toBottomOf="@+id/nombre"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/nombrehuff"
        android:layout_width="438dp"
        android:layout_height="31dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="244dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="244dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/descomprimir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombredesco"
        app:layout_constraintVertical_bias="0.714" />

    <TextView
        android:id="@+id/nombretxt"
        android:layout_width="358dp"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="236dp"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="236dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCargarDatos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre"
        app:layout_constraintVertical_bias="0.529" />

</android.support.constraint.ConstraintLayout>